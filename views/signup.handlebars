<div class="white-box">
    <div class="content-box">

        <h1 class="signupFor">Sign Up for GoChat</h1>

        <a class="btn btn-primary social fb" href="/auth/facebook">
            <i class="fa fa-facebook-official" style="color:rgb(61,91,152)"></i>
            <span id="with">With</span> Facebook</a>
        <a class="btn btn-danger social google" href="/auth/google">
            <i class="fa fa-google-plus" style="color:rgb(219,76,63)"></i>
            <span id="with">With</span> Google</a>
        <hr>

        <form action="/signup" method="post">
            <div>
                <input placeholder="Email" {{#if emailError}} class="field-red" {{/if}}type="email" name="email" />
            {{#if emailError}}
                {{#each emailErrors}}
                    <div class="alert alert-danger">{{msg}}</div>
                {{/each}}
            {{/if}}
            
            {{#if repeatedEmail}}
                <div class="alert alert-danger">{{repeatedEmail}}</div>
            {{/if }}


            </div>
            <div>
                <input placeholder="Display Name" {{#if displayNameError}} class="field-red" {{/if}} type="text" name="displayname" />
                {{#if displayNameError}}
                    {{#each displayNameError}}
                        <div class="alert alert-danger">{{msg}}</div>
                {{/each}}
            {{/if}}
            </div>
            <div>
                <input placeholder="Password" {{#if passwordError}} class="field-red" {{/if}}type="password" name="password" />
                {{#if passwordError}}
                    {{#each passwordError}}
                        <div class="alert alert-danger">{{msg}}</div>
                    {{/each}}
                {{/if}}
            </div>
            <div>
                <input placeholder="Confirm Password" {{#if password2Error}} class="field-red" {{/if}}type="password" name="password2" />
                {{#if password2Error}}
                    {{#each password2Error}}
                        <div class="alert alert-danger">{{msg}}</div>
                    {{/each}}
                {{/if}}
            </div>
            <div>
                <input class="signup" type="submit" value="Sign up" />
            </div>
            <br>
            <br>
            <div class="lastrow">
                <div class="last">
                    By signing up, you agree to our
                    <a href="/" class="signupNow"> terms of use </a> and
                    <a href="/" class="signupNow"> privacy policy </a>.
                </div>

            </div>
        </form>

    </div>
</div>



